{
  "openapi": "3.0.0",
  "info": {
    "title": "Sample Car Rental Documentation",
    "version": "1.0.0"
  },
  "paths": {
    "/categories": {
      "get": {
        "tags": ["Category"],
        "summary": "List Categories",
        "description": "List all cars categories",

        "responses": {
          "200": {
            "description": "Sucessful",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type":"object",
                    "properties": {
                      "name": {
                        "type": "string"
                      },
                      "description": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal error"
          }
        }
      },
      "post": {
        "tags": ["Category"],
        "summary": "Create Category",
        "description": "Create a new category of cars",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  }
                },
                "example": {
                  "name": "SUV",
                  "description": "A Huge car"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          },
          "422": {
            "description": "Invalid entries"
          },
          "500": {
            "description": "Internal error"
          }
        }
      }
    }
  }
}
